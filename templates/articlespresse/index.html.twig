{% extends 'base.html.twig' %}

{% block title %}News!
{% endblock %}

{% block body %}

	<main class="container">


		<div class="row mb-2">

			<div class="row g-5">
				<div class="col-md-8">
					<h1 class="pb-4 mb-4 fst-italic border-bottom">News</h1>
				</h3>
				{% for articlespresse in articlespresses %}
					<article class="articlespresse-post">
						<h2 class="articlespresse-post-title mb-1">{{articlespresse.title}}</h2>

						<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 list">
							{% for articlespresse in articlespresses %}
								<div class="col">
									<div class="card shadow mb-5 bg-body-tertiary rounded-4 image">
										<img src="{{vich_uploader_asset(articlespresse, 'imageFile')}}" class="card-img-top" alt="image de l' article">
										<div class="card-body overflow-hidden">
											<h5 class="card-title text-center text-justify fs-5 text-success">{{articlespresse.title}}</h5>
											<p class="card-text">{{articlespresse.content}}</p>
										</div>
										<div class="d-flex justify-content-between info">
											<p class="saison">{{articlespresse.author}}</p>
											<span class="material-symbols-outlined">
												{{articlespresse.createdAt? articlespresse.createdAt|date('d/m/Y') : ''}}
											</span>
										</div>
									</div>

								</div>
							{% endfor %}

						</div>
					</div>
							{# {% include "articlespresse/_comments.html.twig" with  {'comments': articlespresse.comment} %} #}
				{% endfor %}
			</div>
		</main>
	{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
	{{articlePresse.title}}
{% endblock %}

{% block body %}


	<section class="container">
		{% for flashMessage in app.flashes('success') %}
			<div class=" alert alert-success mt-4">
				{{ flashMessage }}
			</div>

		{% endfor %}
		<div class="title">

			<h1 class="pb-3 mb-2 fst-italic border-bottom" style="font-size: 35px;">{{articlePresse.title}}</h1>

			<div class="card m-0 ">
				<img src="{{ vich_uploader_asset(articlePresse, 'imageFile') }}" alt="{{articlePresse.image}}" class="card-img-top w100" style="height: 450px;">
				<div
					class="card-body">

					{# <div class="col-lg-7 mx-auto"> #}
					<p>{{articlePresse.content | raw}}
					</p>
					<hr class="my-4">
					<p>Publié par:
						<a href="#">{{articlePresse.author}}</a>
						le:
						{{articlePresse.createdAt? articlePresse.createdAt|date('d/m/Y') : '' }}
					</p>
					<!-- ajouter à la place du hashtag du href la route vers le profil utilisateur-->
				</div>


			</div>

				{% include "blog/_comments.html.twig" with  {'comments': articlePresse.comment} %}

				{% include "blog/_form.html.twig"%}
		</section>
	{% endblock %}
